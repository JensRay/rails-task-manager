<div class="container pt-2">
  <div class="btn btn-primary mt-3 mb-3">
    <%= link_to edit_task_path(@task.id) do %>
      <span class="text-light"><i class="far fa-edit"></i> Edit the task</span>
    <% end %>
  </div>
  <h1 class="mb-3"><%= @task.title %></h1>
  <p class="alert alert-info"><%= @task.details %></p>
          <% if @task.completed %>
            <p><i class="far fa-check-square"></i> This task is completed</p>
          <% else %>
            <p><i class="far fa-square"></i> This task is not completed yet</p>
          <% end %>

          <%= link_to tasks_path do %>
            <span class="btn btn-secondary text-light"><i class="fas fa-history"></i> Back to list</span>
          <% end %>
</div>
