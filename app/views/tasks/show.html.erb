<%= link_to edit_task_path(@task.id) do %>
  <i class="far fa-edit"></i> Edit the task
<% end %>

<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
        <% if @task.completed %>
          <p><i class="far fa-check-square"></i> This task is completed</p>
        <% else %>
          <p><i class="far fa-square"></i> This task is not completed yet</p>
        <% end %>


        <%= link_to tasks_path do %>
          <i class="fas fa-history"></i> Back to list
        <% end %>
