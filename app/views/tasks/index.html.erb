<div class="container">
  <h1 class="mt-3 mb-3">My tasks</h1>
  <ul class="tasks">
    <% @tasks.each do |task| %>
      <li class="mt-2 fs-5">
        <% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <span class='pl-1 pr-1'>
          <%= link_to task.title, task_path(task.id) %>
        </span>


        <%= link_to task_path(task.id), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
          <i class="far fa-trash-alt" aria-hidden="true"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <hr>

  <div class="btn btn-primary">
    <%= link_to new_task_path do %>
      <i class="fas fa-plus text-light"></i><span class="text-light"> Add a new task</span>
    <% end %>
  </div>

</div>
